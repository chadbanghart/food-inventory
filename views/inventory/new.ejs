<%- include('../partials/header') %>

<form action="/inventory" method="POST" class="container">
  <div class="row form-group mb-3">
    <label class="col-sm-2 col-form-label">Quantity:</label>
    <div class="col-sm-4">
      <input type="number" class="form-control input-fixed" name="quantity" min="0" step=".1">
    </div>
  </div>
  <div class="row form-group mb-3">
    <label class="col-sm-2 col-form-label">Unit:</label>
    <div class="col-sm-4">
      <input type="text" class="form-control input-fixed" name="unit">
    </div>
  </div>
  <div class="row form-group mb-3">
    <label class="col-sm-2 col-form-label">Item:</label>
    <div class="col-sm-4">
      <input type="text" class="form-control input-fixed" name="item">
    </div>
  </div>
  <div class="row form-group mb-3">
    <label class="col-sm-2 col-form-label">Date Of Expire:</label>
    <div class="col-sm-4">
      <input type="date" class="form-control input-fixed" name="expire">
    </div>
  </div>
  <div class="row form-group mb-3">
    <label class="col-sm-2 col-form-label">Category:</label>
    <div class="col-sm-4">
      <input type="text" class="form-control input-fixed" name="category">
    </div>
  </div>
  <div class="row form-group mb-3">
    <label class="col-sm-2 col-form-label">Location:</label>
    <div class="col-sm-4">
      <select class="form-control input-fixed" name="location">
        <option value="Fridge">Fridge</option>
        <option value="Freezer">Freezer</option>
        <option value="Pantry">Pantry</option>
      </select>
    </div>
  </div>
  <div class="row form-group mb-3">
    <label class="col-sm-2 col-form-label">Favorite Item:</label>
    <div class="col-sm-4">
      <input type="checkbox" class="form-check-input" name="favItem">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 offset-sm-2">
      <input class="btn btn-outline-dark" type="submit" value="Add Item">
    </div>
  </div>
</form>
<p><%= errorMsg %></p>


<%- include('../partials/footer') %>