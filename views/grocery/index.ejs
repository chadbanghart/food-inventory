<%- include('../partials/header') %>

<% if (grocery && grocery.groceryItem.length) { %>
  <table id="inventory-list" class="">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col">Item</th>
      </tr>
    </thead>
    <tbody>
      <% grocery.groceryItem.forEach(function(i) { %>
        <tr class="">
          <th scope="row"></th>
          <td>
            <form action="/grocery/item/<%= i._id %>?_method=DELETE" method="POST">
              <button class="btn btn-outline-dark" type="submit">X</button>
            </form>
          </td>
          <td><%= i.name %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <form action="/grocery" method="post">
    <input type="text" name="item">
    <button type="submit" value="Add Item" class="btn btn-outline-dark">Add Item</button>
  </form>
<% } else { %>
  <form action="/grocery" method="post">
    <input type="text" name="item">
    <button type="submit" value="Add Item" class="btn btn-outline-dark">Add Item</button>
  </form>
<% } %>

<%- include('../partials/footer') %>